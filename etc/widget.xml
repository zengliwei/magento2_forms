<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="CrazyCat\Forms\Block\Widget\Form" id="forms_form">
        <label translate="true">Form</label>
        <description translate="true">Show specified form</description>
        <parameters>
            <parameter name="identifier" xsi:type="block" visible="true" required="true" sort_order="10">
                <label translate="true">Form</label>
                <block class="CrazyCat\Forms\Block\Adminhtml\Form\Widget\Chooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string" translate="true">Select a Form</item>
                        </item>
                    </data>
                </block>
            </parameter>
        </parameters>
    </widget>
</widgets>
